{% extends "base.html.twig" %} 

 {% block title %} SymRecipe - Nouveau recette{% endblock %}
 {% block body %}
 <div class="container">

    <h1 class="mt-4"> Recette de la communauté</h1>

    <div class="d-flex justify-content-between flex-wrap">
       {% for recipe in recipes %}
       <div class="card  border-primary mb-3 " style="max-width: 20rem;">
        <div class="card-header">
             Recette n° {{ recipe.id }}
        </div>
        <div class="card-body">
          <h4 class="card-title">
                {{ recipe.name }}
          </h4>
          <p class="card-text">
              {{recipe.description |slice(0,100) ~ '...'}}
          </p>
        </div>
    </div>
       {% endfor %}     
    </div>
 {% endblock %}
